<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".regform">


    <EditText
        android:id="@+id/firstnameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:hint="Enter First Name" />

    <EditText
        android:id="@+id/lastnmaeid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstnameid"
        android:gravity="left"
        android:hint="Enter last name" />

        <RadioGroup
            android:id="@+id/rgid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></RadioGroup>

    <EditText
        android:id="@+id/ageid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="103dp"
        android:hint="Enter age" />

    <EditText
        android:id="@+id/phoneid"
        android:layout_width="156dp"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"
        android:layout_below="@+id/ageid"
        android:hint="Enter ph no" />

    <EditText
        android:id="@+id/houseid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="191dp"
        android:hint="Enter address" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/houseid" />


    <EditText
        android:id="@+id/dobid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Detailsid"
        android:hint='Enter dob (use "dd-mm-yyyy" )' />


    <EditText
        android:id="@+id/Detailsid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner"
        android:hint="symptoms" />


    <Button
        android:id="@+id/sb"
        android:layout_width="113dp"
        android:layout_height="36dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/dobid"
        android:text="Submit" />

</RelativeLayout>